<section>
    <div class="container">
        <div class="row mt-4">
            <a href="admin/add_product" class="btn btn-success ml-auto" >Add Products</a>
        </div>
    </div>
    <div class="container">
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th scope="col">Sr_No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Design</th>
                    <th scope="col">Price</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Image</th>
                    <th scope="col">Optional</th>
                    <th scope="col">Optional</th>

                </tr>
            </thead>
            {{#each products}}

            <tbody>
                <tr>
                    <th scope="row">{{@index}}.</th>
                    <td>{{this.name}}</td>
                    <td>{{this.design}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.discount}}</td>
                    <td><img style="width:50px; height=50px" src="/product_images/{{this._id}}.jpg" alt="" </td>
                    <td><a href="admin/edit_item/{{this._id}}" class="btn btn-success sm">Edit</a></td>
                    <td><a href="admin/deleat_item/{{this._id}}" onclick="return confirm('Are you want to delete this item {{this.name}} ?')" class="btn btn-danger sm">Deleat</a></td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
</section>
