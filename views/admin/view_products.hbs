<section>
    <div class="container">
        <div class="row mt-4">
            <a href="admin/add_product" class="btn btn-success ml-auto" >Add Products</a>
        </div>
    </div>
    <div class="container">
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th scope="col">Sr_No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Design</th>
                    <th scope="col">Price</th>
                    <th scope="col">Discount</th>
                    <th scope="col">Image</th>

                </tr>
            </thead>
            {{#each products}}

            <tbody>
                <tr>
                    <th scope="row">{{@index}}.</th>
                    <td>{{this.name}}</td>
                    <td>{{this.design}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.discount}}</td>
                    <td><img style="width:50px; height=50px" src="{{this.img}}" alt=""</td>
                </tr>
            </tbody>
            {{/each}}
        </table>
    </div>
</section>
