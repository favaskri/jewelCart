<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Tittle</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                </tr>

            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    
                    <td><img style="width: 70px;height: 70px; " src="/product_images/{{this.products._id}}.jpg" 
                    alt=""></td>
                    <td>{{this.products.name}}</td>
                   
                    <td><button class="cart-item-count mr-3" >-</button>1<button class="cart-item-count mr-3">+</button>
                    </td>
                    <td>{{this.products.price}}</td>>
                    <td>
                        <a href="" class="btn  btn-danger">remove</a>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>
        <hr>
        <div class="float-right pr-5 ">
        <h5 class="float-left mr-5"> Total:Rs.<span id="total">{{totalValue}}</span></h5><br>
        <a href="/place-order" class=" mt-3 btn btn-success style="width:100%" "><b>Place Order</b> </a>
        </div>
    </div>
</section>